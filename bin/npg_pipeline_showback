#!/usr/bin/env perl

use strict;
use warnings;
use FindBin qw($Bin);
use lib ( -d "$Bin/../lib/perl5" ? "$Bin/../lib/perl5" : "$Bin/../lib" );
use Log::Log4perl qw(:levels);

our $VERSION = '0';

use npg_pipeline::function::showback;

my $layout = '%d %-5p %c - %m%n';
Log::Log4perl->easy_init({layout => $layout,
                          level  => $INFO,
                          utf8   => 1});

npg_pipeline::function::showback->new_with_options()->process_run();

0;
__END__

=head1 NAME

npg_pipeline_showback

=head1 USAGE

npg_pipeline_showback --executor_type lsf \
  --runfolder_path=/tmp/ET_oOGYecL/nfs/sf45/IL2/analysis/123456_IL2_1234Data/Intensities/BAM_basecalls_20100907-142417/' 

=head1 REQUIRED ARGUMENTS

=over

id_run

bam_basecall_path 

runfolder_path

=back 

=head1 OPTIONS

=head1 EXIT STATUS

0

=head1 CONFIGURATION

=head1 SYNOPSIS

=head1 DESCRIPTION

This script is run at the end of the analysis pipeline, to collect and store
runtime statistics.

